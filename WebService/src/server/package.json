{
  "name": "poor-clares-arundel-koa-server",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc && eslint -c .eslintrc.js --ext .ts ./server",
    "copy:client": "cpx \"../client/build/**/*\" client/build",
    "lint": "tsc --noEmit && eslint -c .eslintrc.js --ext .ts ./server",
    "start": "node dist/index.js",
    "watch": "cross-env NODE_ENV=development nodemon --watch src/**/* -e ts,tsx --exec ts-node src/server/server.ts"
  },
  "dependencies": {
    "@dapr/dapr": "^2.3.1",
    "koa": "^2.5.2",
    "koa-body": "^4.0.4",
    "koa-helmet": "^6.1.0",
    "koa-router": "^10.0.0",
    "koa-send": "^5.0.0",
    "koa-static": "^5.0.0",
    "mailgun-js": "^0.22.0"
  },
  "devDependencies": {
    "@types/koa": "^2.0.46",
    "@types/koa-router": "^7.0.31",
    "@types/koa-send": "^4.1.1",
    "@types/koa-static": "^4.0.0",
    "@types/mailgun-js": "^0.22.0",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^4.0.0",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "nodemon": "^2.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.0.1"
  }
}
